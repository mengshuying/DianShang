<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r"
        android:orientation="horizontal"
        >
        <RadioButton
            android:button="@null"
            android:id="@+id/r1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="首页"
            android:drawableTop="@drawable/btn_tabbar_home_selector"
            android:gravity="center"
            />
        <RadioButton
            android:gravity="center"
            android:text="分类"
            android:button="@null"
            android:id="@+id/r2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_tabbar_fenlei_selector"
            />
        <RadioButton
            android:text="购物车"
            android:gravity="center"
            android:button="@null"
            android:id="@+id/r3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_tabbar_gouwuche_selector"
            />
        <RadioButton
            android:text="个人"
            android:gravity="center"
            android:button="@null"
            android:id="@+id/r4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_tabbar_wode_selector"
            />
     </RadioGroup>
     <FrameLayout
         android:id="@+id/fram"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_above="@id/r"
         ></FrameLayout>

</RelativeLayout>
